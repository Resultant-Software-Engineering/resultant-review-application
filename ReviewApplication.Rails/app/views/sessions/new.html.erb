<div class="max-w-md mx-auto mt-8 p-6 bg-white shadow-md rounded-lg">
  <h1 class="text-2xl font-bold text-blue-800 mb-4 text-center">Login</h1>

  <%= form_with(url: sessions_path, class: "mb-4") do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 p-2 border border-gray-300 rounded-md w-full", placeholder: "Enter your email" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, class: "mt-1 p-2 border border-gray-300 rounded-md w-full", placeholder: "Enter your password" %>
    </div>

    <div class="flex justify-center">
      <%= f.submit "Log in", class: "btn-blue" %>
    </div>
  <% end %>
</div>

<style>
  .btn-blue {
    background-color: #3490dc;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .btn-blue:hover {
    background-color: #2779bd;
  }
</style>
